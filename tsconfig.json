{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": ".",
        "jsx": "preserve",
        "strict": false,
        "target": "ESNext",
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "experimentalDecorators": true,// 启动装饰器
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@kviewui/*": ["src/packages/*"],
            "@sites/*": ["src/examples/*"]
        },
        "types": [
            "unplugin-vue-define-options/macros-global", 
            "vite/client",
            "@dcloudio/types",
            "@types/node",
            "@kviewui/types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue",
        "src/**/*.jsx",
    ],
    "exclude": [
        "./node_modules",
        "src/packages/vscode-extension"
    ]
}